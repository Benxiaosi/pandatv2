<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_titlebar"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#335edf">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:gravity="center_horizontal|center"
        android:singleLine="true"
        android:text="标题栏"
        android:textColor="#ffffffff"
        android:textSize="30dp" />
    <ImageView

        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:background="@drawable/panda_sign"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:visibility="visible" />


    <Button
        android:id="@+id/button_backward"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_alignBaseline="@+id/text_title"
        android:layout_alignBottom="@+id/text_title"
        android:background="@drawable/fenlei_fanhui"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:gravity="center"
        android:onClick="onClick"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_forward"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/person_sign"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:gravity="center"
        android:onClick="onClick"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:visibility="visible" />

    <Button

        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/button_forward"
        android:layout_toStartOf="@+id/button_forward"
        android:background="@drawable/hudong_sign"
        android:paddingLeft="5dp"
        android:textColor="#ffffffff" />

    <TextView

        android:id="@+id/textView"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_alignBaseline="@+id/button_forward"
        android:layout_alignBottom="@+id/button_forward"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="注册"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:textColor="#ffffffff"
        android:visibility="gone" />
    <TextView

        android:id="@+id/bianji"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_alignBaseline="@+id/button_forward"
        android:layout_alignBottom="@+id/button_forward"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="编辑"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:textColor="#ffffffff"
        android:visibility="gone" />
    <TextView
        android:id="@+id/baocun"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_alignBaseline="@+id/button_forward"
        android:layout_alignBottom="@+id/button_forward"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="保存"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:textColor="#ffffffff"
        android:visibility="gone" />

</RelativeLayout>